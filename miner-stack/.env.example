# ============================================
# Quantus Node Configuration
# ============================================

# Required: Your SS58 address for mining rewards
REWARDS_ADDRESS=your_ss58_address_here

# Chain name (dirac, heisenberg, etc.)
CHAIN=dirac

# Node name (visible in network)
NODE_NAME=my-quantus-node

# ============================================
# Docker Images
# ============================================

NODE_IMAGE=ghcr.io/quantus-network/quantus-node:v0.4.2
MINER_IMAGE=ghcr.io/quantus-network/quantus-miner:v1.0.0

# ============================================
# Network Configuration
# ============================================

# Network peer limits
IN_PEERS=256
OUT_PEERS=256

# Ports (change if needed)
P2P_PORT=30333
RPC_PORT=9944
PROMETHEUS_PORT=9615

# ============================================
# Miner Configuration
# ============================================

# Number of CPU workers for mining
WORKERS=4
